{
    "extends": "tslint:recommended",
    "__rulesDirectory": ["path/to/custom/rules/directory/", "another/path/"],
    "rules": {
        "max-line-length": {
            "options": [120]
        },
        "new-parens": true,
        "no-arg": true,
        "no-bitwise": true,
        "interface-name": false,
        "ordered-imports": false,
        "member-ordering": false,
        "no-shadowed-variable": false,
        "no-conditional-assignment": true,
        "object-literal-sort-keys": false,
        "no-consecutive-blank-lines": false,
        "one-variable-per-declaration": false,
        "quotemark": [true, "single", "jsx-double"],
        "space-before-function-paren": [true, "always"],
        "arrow-parens": [true, "ban-single-arg-parens"],
        "max-classes-per-file": [true, 5, "exclude-class-expressions"],
        "trailing-comma": [true, {"multiline": "ignore", "singleline": "ignore"}],
        "no-trailing-whitespace": [true, "ignore-template-strings", "ignore-blank-lines"],
        "variable-name": [true, "check-format", "allow-leading-underscore", "allow-pascal-case"],
        "no-console": { "severity": "warning", "options": ["debug", "log", "time", "timeEnd", "trace"] },

        "": ""
    },
    "jsRules": {
        "max-line-length": {
            "options": [120]
        }
    }
}
